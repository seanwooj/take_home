<div class="masthead">
  <div class="row">
    <div class="large-12 columns">
      <div class="row">

        <div class="large-12 columns masthead-headers">
          <h2><font color="white">Sign up</font></h2>

          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <div><%= f.label :email %><br />
            <%= f.email_field :email, :autofocus => true %></div>

            <div><%= f.label :password %><br />
              <%= f.password_field :password %></div>

              <div><%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation %></div>

                <div class="row">
                  <div class="large-4 columns">
                    <label for="customDropdown1">In which grade is your child? </label>
                    <select id="customDropdown1" class="medium">
                      <option>Kindergarten</option>
                      <option>First grade</option>
                      <option>Second grade</option>
                      <option>Third grade</option>
                      <option>Fourth grade</option>
                      <option>Fifth grade</option>
                    </select>
                  </div>
                </div>

                <div><%= f.submit "Sign up" %></div>
                <% end %>

                <%= render "devise/shared/links" %>
              </div>



            </div>

          </div>

        </div>
      </div>
